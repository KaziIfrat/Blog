<h1>hello blog</h1>
<% @posts.each  do |post| %>
  <h2><%= link_to post.title, post_path(post) %></h2>
  <p><%= post.content %></p>
  <p>
    <%= link_to "Edit", edit_post_path(post) %>
    <%= link_to "Delete", post, data: {:confirm => "Are you sure??"}, :method => :delete  %>

  </p>
  <hr>

<% end %>

<%= link_to 'Add post' , new_post_path %>